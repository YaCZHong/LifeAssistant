            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="end">

                <TextView
                    android:id="@+id/day_4_temp_max"
                    android:layout_width="0dp"
