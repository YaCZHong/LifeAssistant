                    android:text="0°/ "
                    android:textColor="#424242"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/day_5_temp_min"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="bottom|start"
                    android:paddingBottom="16dp"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorTextGrey2nd" />

        <RelativeLayout
            android:id="@+id/rl_dailyList"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_fifteen_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="15天概况"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:layout_toEndOf="@id/tv_fifteen_day"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>