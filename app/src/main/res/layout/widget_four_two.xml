<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_clock_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/now_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextClock
                android:id="@+id/widget_four_two_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="-2dp"
                android:format12Hour="h:mm"
                android:format24Hour="HH:mm"
                android:shadowColor="@color/colorTextDark2nd"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#ffffff"
                android:textSize="48sp"
                android:visibility="gone" />


            <TextClock
                android:id="@+id/widget_four_two_clock_aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/widget_four_two_clock"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/widget_four_two_clock"
                android:format12Hour="aa"
                android:format24Hour=""
                android:shadowColor="@color/colorTextDark2nd"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/widget_four_two_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/widget_four_two_icon"
                android:shadowColor="@color/colorTextDark2nd"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/widget_four_two_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextClock
                android:id="@+id/widget_four_two_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:format12Hour="MM-dd EEE"
                android:format24Hour="MM-dd EEE"
                android:maxLines="1"
                android:shadowColor="@color/colorTextDark2nd"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/widget_four_two_lunar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/widget_four_two_date"
                android:maxLines="1"
                android:shadowColor="@color/colorTextDark2nd"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="13sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/widget_four_two_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:shadowColor="@color/colorTextDark2nd"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/daily_info"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daily_info_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/daily_info_1_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/daily_info_1_temp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daily_info_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/daily_info_2_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/daily_info_2_temp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daily_info_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/daily_info_3_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/daily_info_3_temp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daily_info_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/daily_info_4_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/daily_info_4_temp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daily_info_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/daily_info_5_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/daily_info_5_temp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:shadowDx="0.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="1"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂未添加城市~"
        android:textSize="16sp" />

</RelativeLayout>