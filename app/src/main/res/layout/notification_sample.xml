<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_sample"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_simple_iv"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:padding="14dp" />

        <TextView
            android:id="@+id/notification_simple_temp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:shadowColor="@color/colorTextDark2nd"
            android:shadowDx="0.5"
            android:shadowDy="0.5"
            android:shadowRadius="1"
            android:text="14°"
            android:textColor="#dd000000"
            android:textSize="48sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/notification_simple_temp_aqi"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:shadowColor="@color/colorTextDark2nd"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"
                android:text="-11° / 5°  AQI 49"
                android:textColor="#aa000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/notification_simple_status"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:shadowColor="@color/colorTextDark2nd"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"
                android:text="晴天"
                android:textColor="#aa000000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notification_simple_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:shadowColor="@color/colorTextDark2nd"
            android:shadowDx="0.5"
            android:shadowDy="0.5"
            android:shadowRadius="1"
            android:text="潮州"
            android:textColor="#aa000000"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/notification_simple_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:shadowColor="@color/colorTextDark2nd"
            android:shadowDx="0.5"
            android:shadowDy="0.5"
            android:shadowRadius="1"
            android:text="11:34"
            android:textColor="#aa000000"
            android:textSize="11sp" />
    </LinearLayout>
</RelativeLayout>